  "version": "1.0",
  "manifest_version": 2,
  "description": "Shortcuts for freebox revolution",
  "homepage_url": "http://www.studio-dev.fr",
  "browser_action": {
    "default_icon": "icons/icon-19.png",
    "default_popup": "popup.html"
